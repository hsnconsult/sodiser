<record id="oms_facture_form" model="ir.ui.view">
	         <field name="name">oms.facture.form</field>
             <field name="model">oms.facture</field>
             <field name="arch" type="xml">
	         <form string="factures" version="7.0">
                <header>
                   <field name="state" widget="statusbar" statusbar_visible="nonreglee,reglee" />
                </header>
                <sheet>
                        <group>
							<field name="name" />
							<field name="datefact" />
							<field name="datesortie" />
							<field name="totgasoil" />
							<field name="totsuper" />
							<field name="totddo" />
							<field name="totpetrole" />
							<field name="montant"/>
                        </group>
                       <notebook>
                         <page string = "Lignes facture">
                            <field name="ligne_facture" string="Détail Facture" context="{'form_view_ref':'oms_facture_ligne_form','tree_view_ref':'oms_facture_ligne_tree'}"/>
                         </page>
                       </notebook>
                </sheet>
                </form>
				</field>
	     </record>	
	  <record id="oms_facture_tree" model="ir.ui.view">
            <field name="name">oms.facture.tree</field>
            <field name="model">oms.facture</field>
            <field name="arch" type="xml">
                <tree string="factures">
							<field name="name" />
							<field name="datefact" />
							<field name="datesortie" />
							<field name="totgasoil" sum="Total" />
							<field name="totsuper" sum="Total" />
							<field name="totddo" sum="Total"/>
							<field name="totpetrole" sum="Total"/>
							<field name="montant" sum="total" />
							<field name="state" />
                </tree>
            </field>
        </record>
