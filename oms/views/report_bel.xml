<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="minimal_layout_inherit" inherit_id="web.minimal_layout">
		<xpath expr="//head" position="inside">
			<link rel='stylesheet' href="/oms/static/src/css/oms.css"/>
		</xpath>
</template>
<template id="report_bel">
    <t t-call="web.html_container">
        <t t-set="data_report_margin_top" t-value="12"/>
        <t t-set="data_report_margin_left" t-value="12"/>
        <t t-set="data_report_header_spacing" t-value="9"/>
        <t t-set="data_report_dpi" t-value="110"/>
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <div class="page">
                  <div class="espacen" style="width:100%;"></div>
                  <div style="width:100%; float:left">              
                    <div align="center" class="titre" style="width:60%; float:right">
                    <p>Bon d'enlèvement N° <span t-if="o.state not in ['draft','sent']" class="titre">  <span t-esc="o.name" /> </span></p>
                    </div>
                  </div>
                  <div class="espacedoit" style="width:100%;"></div>
                    <div class="titre" style="width:100%;">Client:</div>
                      <div class="entete info" style="width:60%;">
                           <span><strong>Nom:...</strong></span> <span t-esc="o.partner_id.name" /><br/>
                           <span><strong>Adresse:</strong></span>... <span t-esc="o.partner_id.street" /><br/>
                           <span><strong>Code postal:</strong></span>... <span t-esc="o.partner_id.zip" />... <span><strong>Ville:</strong></span><span t-esc="o.partner_id.idzone.name" /> <span><strong>Pays:</strong></span>... <br/>
                           <span><strong>Téléphone:</strong></span>... <span t-esc="o.partner_id.phone" /><br/>
                      </div>
                      <div class="entete info" style="width:35%; float:right">
                           <span><strong>Date:</strong></span>... <span t-field="o.datecom"/><br/>
                           <span><strong>Réf. Commande:</strong></span>... <br/>
                           <span><strong>Nature Client:</strong></span>... <br/>
                           <span><strong>Code Client:</strong></span>...<span t-esc="o.partner_id.ref" /> <br/>
                      </div>
                      <div class="tableau">
						<table class="tabbe" width="100%">
                          <thead>
  							<tr>
							    <th>Code P.</th>
							    <th>Désignation</th>
							    <th>Quantité</th>
							    <th>Unité</th>
							    <th>Prix Unitaire</th>
							    <th>Montant</th>
							    <th>BIC 0,2%</th>
							    <th>Montant Total</th>
							</tr>
                          </thead>
                         <tbody class="poste">
                          <t t-foreach="o.order_line" t-as="oline">
                           <tr>
                            <td class="hauteur" valign="middle"></td>
                            <td class="hauteur" valign="middle"><span t-esc="oline.product_id.name"/></td>
                            <td align="center" valign="middle"><span t-esc="'{:,.0f}'.format(oline.product_uom_qty).replace(',', ' ').replace('.', ',')"/></td>
                            <td align="center" valign="middle">Litre</td>
							<td align="center" valign="middle"><span t-esc="'{:,.2f}'.format(oline.pu_sonabhy).replace(',', ' ').replace('.', ',')"/></td>
							<td align="right" valign="middle"><span t-esc="'{:,.0f}'.format(oline.price_subtotals).replace(',', ' ').replace('.', ',')"/></td>
							<td align="right" valign="middle"><span t-esc="'{:,.0f}'.format(oline.price_taxs).replace(',', ' ').replace('.', ',')"/></td>
							<td align="right" valign="middle"><span t-esc="'{:,.0f}'.format(oline.price_totals).replace(',', ' ').replace('.', ',')"/></td> 
                          </tr>
                          </t>
                           <tr>
                             <td colspan="7" align="left"><strong>Total</strong></td><td align="right"><strong><span t-esc="'{:,.0f}'.format(o.amount_totals).replace(',', ' ').replace('.', ',')"/></strong></td>
                           </tr>

                         </tbody>
						</table>
                      </div>
                     <div class="poste esp"><span>Montant en lettre :</span> <span t-esc="o.compute_amount_text()" style="color:#800000"/><span style="color:#800000">  Francs CFA</span><br/><br/></div>
                      <div class="entete info" style="width:50%;">
                           <span><strong>Lieu de livraison:</strong></span>... <span t-esc="o.partner_id.idzone.name" /><br/>
                           <span><strong>Transporteur:</strong></span>................................................................ <br/>
                           <span><strong>Vehicule n°:</strong></span>...................................................................<br/>
                           <span><strong>Chauffeur:</strong></span>.....................................................................<br/>
                      </div>
                    <div class="poste esps" align="center" style="width:100%; float:left"><span t-esc="res_company.arretecom"/></div>
                     <p><div>
                      <div class="signature poste" style="width:30%;">
						<span></span><br/><br/>
                         <span style="font-weight:bold">Le Client</span>
                      </div>
                      <div class="signature poste" style="width:35%;">
						<span></span><br/><br/>
						<span style="font-weight:bold">Le Transporteur</span>
                      </div>
                      <div class="signature poste" style="width:30%; text-align:center">
						<span></span><br/><br/>
                         <span style="font-weight:bold">Pour SODISER-SA<br/><br/><br/><br/><br/></span>
                         <span>Le directeur Général</span>
                      </div>
                     </div>


      </div>



        </t>
        </t>
    </t>
</template>
</odoo>
